extends ../layout

block content
   div(class="d-flex flex-row content mx-auto justify-content-center")
    form(class="card w-50 mt-5" method="post" action="/auth/signin")
      div(class="card-header") Connection
      div(class="card-body")
        div(class="form-group")
          label email
          input(class="form-control" type="email" name="email")
          label Password
          input(class="form-control" type="password" name="password")
          if errors
            ul(class="my-2")
            each error in errors
              li(class="text-danger")= error
        div(class="w-100 mt-3")
          input(type="submit" value="connexion" class="btn btn-primary ms-auto d-block")